<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.android.automata">

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        tools:replace="android:allowBackup">
        <activity android:name=".Automatons.DFA.DFA" />
        <activity
            android:name=".Automatons.DFA.TransitionDiagram"
            android:label="@string/transition"
            android:theme="@style/diagram" />
        <activity
            android:name=".Automatons.DFA.SimulationActivity"
            android:label="@string/simulation"
            android:theme="@style/simulation" />
        <activity
            android:name=".Automatons.DFA.DefinitionActivity"
            android:label="@string/definition"
            android:theme="@style/definition" />
        <activity
            android:name=".Automatons.PDA.PDA"
            android:label="Pushdown Automata" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/mainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Automatons.NFA.NFA" />
        <activity android:name=".Automatons.NPDA.NPDA"></activity>
    </application>

</manifest>